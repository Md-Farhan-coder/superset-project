# Server Environment Variables Example
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development


# Or for MongoDB Atlas:
MONGODB_URI="your_mongodb_atlas_connection_string_here"
# JWT Secret
JWT_SECRETE=your_jwt_secret_key_here

# Email Configuration (Nodemailer)
SENDER_EMAIL=receipeint_email
SENDER_PASSWORD=receipeint_email_password
# Note: For Gmail, use App Password instead of regular password

# CORS Configuration
CLIENT_URL=http://localhost:3000

# Optional: For production
# NODE_ENV=production
# CLIENT_URL=https://yourdomain.com 